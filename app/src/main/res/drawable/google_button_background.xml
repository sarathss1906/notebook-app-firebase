<?xml version="1.0" encoding="utf-8"?><!-- google_button_background.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color when pressed -->
            <corners android:radius="32dp" /> <!-- Rounded corners for the button -->
            <stroke
                android:width="2dp"
                android:color="#494949" />
        </shape>
    </item>

    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color in the default state -->
            <corners android:radius="32dp" /> <!-- Rounded corners for the button -->
            <stroke
                android:width="2dp"
                android:color="#494949" />
        </shape>
    </item>
</ripple>
